@model ReposteriaLili_Front.Models.ViewModels.OrdenViewModel

@{
    ViewData["Title"] = "AsignarRepartidor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="AsignarRepartidor">
    <div class="container border p-3">

        <div asp-validation-summary="None" class="text-danger"></div>

        <input hidden asp-for="OrdenUpdateDTO.IdOrden"/>

        <div class="row">
            <h2 class="text-info">Registrar Empleado</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">NumeroFolio</label>
                <input asp-for="OrdenUpdateDTO.NumeroFolio" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.NumeroFolio" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Fecha solicitud</label>
                <input asp-for="OrdenUpdateDTO.FechaSolicitud" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.FechaSolicitud" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Estado del Pedido</label>
                <input asp-for="OrdenUpdateDTO.EstadoPedido" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.EstadoPedido" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label"> Seleccione un repartidor </label>
                <select asp-for="OrdenUpdateDTO.IdEmpleadoRepartidor" class="form-select" asp-items="@Model.repartidoresDtoList">
                    <option value="">--seleccione una repartidor--</option>
                </select>
                <span asp-validation-for="OrdenUpdateDTO.IdEmpleadoRepartidor" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Fecha entrega</label>
                <input asp-for="OrdenUpdateDTO.FechaEntrega" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.FechaEntrega" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Importe total de la orden</label>
                <input asp-for="OrdenUpdateDTO.ImporteTotalOrden" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.ImporteTotalOrden" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Incidente reportado del cliente</label>
                <input asp-for="OrdenUpdateDTO.DescripcionIncidenteCliente" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.DescripcionIncidenteCliente" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Incidente reportado del repartidor</label>
                <input asp-for="OrdenUpdateDTO.DescripcionIncidenteRepartidor" class="form-control" />
                <span asp-validation-for="OrdenUpdateDTO.DescripcionIncidenteRepartidor" class="text-danger"></span>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Gerente" asp-action="ListarPedidosRealizados" class="btn btn-success">Regresar</a>
        </div>


    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}