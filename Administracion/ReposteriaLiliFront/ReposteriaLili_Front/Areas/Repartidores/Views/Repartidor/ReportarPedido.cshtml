@model ReposteriaLili_Front.Models.DTO.OrdenesDTOs.OrdenUpdateDTO

@{
    ViewData["Title"] = "ReportarPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data" asp-action="ReportarPedido">
    <div class="container border p-3">

        <div asp-validation-summary="None" class="text-danger"></div>

        <input hidden asp-for="IdOrden" />
        <input hidden asp-for="IdDireccionCliente" />
        <input hidden asp-for="IdDireccionSucursal" />
        <input hidden asp-for="IdEmpleadoRepartidor" />
        <input hidden asp-for="IdTarjeta" />
        <input hidden asp-for="ImagenIncidenteCliente" />
        <input hidden asp-for="DescripcionIncidenteCliente" />
        <input hidden asp-for="EstadoPedido" />
        <input hidden asp-for="ImporteTotalOrden" />

        <div class="row">
            <h2 class="text-info">Reportar pedido</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">NumeroFolio</label>
                <input asp-for="NumeroFolio" class="form-control" />
                <span asp-validation-for="NumeroFolio" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Fecha solicitud</label>
                <input asp-for="FechaSolicitud" class="form-control" />
                <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Incidente reportado del repartidor</label>
                <input asp-for="DescripcionIncidenteRepartidor" class="form-control" />
                <span asp-validation-for="DescripcionIncidenteRepartidor" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label>Imagen</label>
                <input type="file" accept="image/png, image/gif, image/jpeg" name="imagenes" id="imagenId" class="form-control" />
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Reportar</button>
            <a asp-controller="Repartidor" asp-action="ListarPedidosAsignados" class="btn btn-success">Regresar</a>
        </div>

    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}