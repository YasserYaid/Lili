@model IEnumerable<ReposteriaLili_Front.Models.DTO.ProductosDTOs.ProductoResponseDTO>

@{
    ViewData["Title"] = "ListarInventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Listar inventario sin modificar aun</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="AdministracionProductos" asp-action="RegistrarProductos" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Registrar Producto</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Ocupantes</th>
                <th>Tarifa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.CantidadDisponible</td>
                    <td>@item.Categoria</td>
                    <td>@item.Descripcion</td>
                    <td>@item.ImagenUrl</td>
                    <td>@item.ImagenCodigoBarrasUrl</td>
                    <td>@item.CodigoBarras</td>
                    <td>@item.FechaCaducidad</td>
                    <td>
                        <a asp-controller="AdministracionEmpleados" asp-action="ActualizarEmpleado" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="AdministracionEmpleados" asp-action="RemoverEmpleado" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>