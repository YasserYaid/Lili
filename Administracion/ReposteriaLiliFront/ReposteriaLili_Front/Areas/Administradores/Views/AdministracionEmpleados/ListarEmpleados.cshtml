@model IEnumerable<ReposteriaLili_Front.Models.DTO.EmpleadosDTOs.EmpleadoResponseDTO>
@{
    ViewData["Title"] = "ListarEmpleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Empleados</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="AdministracionEmpleados" asp-action="RegistrarEmpleado" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Registrar Empleado</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Ocupantes</th>
                <th>Tarifa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.ApellidoPaterno</td>
                    <td>@item.ApellidoMaterno</td>
                    <td>@item.Correo</td>
                    <td>@item.Telefono</td>
                    <td>@item.UserName</td>
                    <td>@item.Cargo</td>
                    <td>@item.FechaIngreso</td>
                    <td>
                        <a asp-controller="AdministracionEmpleados" asp-action="ActualizarEmpleado" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="AdministracionEmpleados" asp-action="RemoverEmpleado" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>