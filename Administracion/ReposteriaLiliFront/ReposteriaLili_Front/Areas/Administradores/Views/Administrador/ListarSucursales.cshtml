@model ReposteriaLili_Front.Models.ViewModels.SucursalViewModel

@{
    ViewData["Title"] = "ListarSucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de sucursales</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="SucursalUpSert"> <i class="bi bi-plus-square-fill"></i> Crear Nueva Sucursal</a>
    </div>
</div>

<br />

<div class="panel-body table-responsive" id="listadoDatos">
    <table id="tblDatos" class="table table-striped table-bordered table-condensed table-hover">
        <thead class="table-dark">
        <th>Estado</th>
        <th>Ciudad</th>
        <th>Municipio</th>
        <th>Calle</th>
        <th>Numero</th>
        <th>Colonia</th>
        <th>CodigoPostal</th>
        <th>Latitud</th>
        <th>Longitud</th>
        <th>Dia Inicial</th>
        <th>Dia Final</th>
        <th>Hora Inicial</th>
        <th>Hora Final</th>
        <th>Nombre Comercial</th>
        <th>Opciones Disponibles</th>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/listarSucursales.js"></script>
}